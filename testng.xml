<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<!-- to run test sequentially change thread count from 2 to 1 and enable
	firefox -->
<suite name="Test WebAuth.io Web Application" parallel="tests"
       thread-count="1">
    <listeners>
        <listener class-name="reports.MyListener" />
    </listeners>
    <test name="Test Sign up Functionality">
        <parameter name="browser" value="Chrome" />
        <classes>
            <class name="test_cases.E2E_CheckSignupFunctionality" />
        </classes>
    </test>

    <test name="Test Sign in Functionality">
        <parameter name="browser" value="Chrome" />
        <classes>
            <class name="test_cases.E2E_CheckSignupFunctionality" />
        </classes>
    </test>
    <!--<test name="TestFirefox"> <parameter name="browser" value="Firefox"
        /> <classes> <class name="main.Start" /> </classes> </test> -->
</suite>